{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": "src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "setupTests.cjs", "jest.config.cjs", "**/*spec.ts"],
  "exclude": ["node_modules", "dist"]
}
