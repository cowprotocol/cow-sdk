{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:coverage": {
      "outputs": ["coverage/**", "jest.results.json"],
      "dependsOn": ["build"],
      "cache": true
    },
    "test:coverage:html": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "swagger:codegen": {
      "cache": false
    }
  }
}
