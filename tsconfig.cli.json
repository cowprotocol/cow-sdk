{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom",
      "es2019",
      "esnext"
    ],
    "paths": {
      "*": [
        "./src/types/*"
      ]
    },
    "types": [
      "node"
    ]
  }
}
